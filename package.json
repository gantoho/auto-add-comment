{
  "name": "auto-end-add-comment",
  "displayName": "auto-end-add-comment",
  "description": "Auto add custom comment to files on save",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-end-add-comment.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "File Auto Comment",
      "properties": {
        "fileAutoComment.templates": {
          "type": "object",
          "default": {
            "php": "<?php # vantagemarekts|{time} ?>",
            "js": "// ! vantagemarekts|{time} !",
            "css": "/* ! vantagemarekts|{time} ! */"
          },
          "description": "Comment templates for different file types. Use {time} as placeholder for current time (format: YYYY-MM-DD HH:mm:ss)",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
