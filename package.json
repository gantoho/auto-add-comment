{
  "name": "auto-add-comment",
  "displayName": "Auto Add Comment",
  "description": "Auto add custom comment to files on save",
  "version": "0.0.1",
  "icon": "images/icon.jpg",
  "publisher": "Ganto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gantoho/auto-add-comment.git"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-add-comment.toggle",
        "title": "Toggle Auto Add Comment"
      }
    ],
    "configuration": {
      "title": "File Auto Comment",
      "properties": {
        "fileAutoComment.commentMarker": {
          "type": "string",
          "default": "project",
          "description": "Unique marker for identifying auto-generated comments (used in templates with {marker})."
        },
        "fileAutoComment.timeOffset": {
          "type": "number",
          "default": 5,
          "description": "Time offset in minutes (positive = forward, negative = backward). e.g. 5 = 5 minutes later, -3 = 3 minutes earlier."
        },
        "fileAutoComment.templates": {
          "type": "object",
          "default": {
            "php": "<?php # {marker}|{time} ?>",
            "js": "// ! {marker}|{time} !",
            "css": "/* ! {marker}|{time} ! */",
            "vue": "<!-- ! {marker}|{time} ! -->",
            "html": "<!-- ! {marker}|{time} ! -->",
            "yaml": "# ! {marker}|{time} !"
          },
          "description": "Comment templates for different file types. Use {time} as placeholder for current time (format: YYYY-MM-DD HH:mm:ss)",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "menus": {
      "statusBar": [
        {
          "command": "auto-add-comment.toggle",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
